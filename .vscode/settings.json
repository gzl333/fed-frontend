{
    //////these are vscode roaming settings. all settings here will shadow vscode local settings.//////
    ////vscode settings
    "editor.formatOnSave": true, //format on save
    "editor.codeActionsOnSave": { //lint and fix on save
        "source.fixAll.eslint": true
    },
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint" //.ts files use eslint as formatter
    },
    "[vue]": {
        "editor.defaultFormatter": "octref.vetur" //.vue files use vetur as formatter
    },
    ////vetur settings
    "vetur.validation.template": false, //disable vetur default linting, then vetur use eslint rules from .eslintrc
    "vetur.format.enable": true,
    "vetur.experimental.templateInterpolationService": true, //enable interpolation in template section of .vue file
    //vetur uses different formatters for each part of .vue file
    "vetur.format.defaultFormatter.ts": "none", //disable vetur formatter for ts section of .vue file
    "vetur.format.defaultFormatter.js": "none",
    "vetur.format.defaultFormatter.html": "prettier",
    "vetur.format.defaultFormatter.css": "prettier",
    ////eslint settings
    "eslint.validate": [
        "typescript", //tell eslint to lint .ts files
    ],
    "eslint.format.enable": true, //eslinte formatter must be enabled for .ts files and ts section of .vue files.
}